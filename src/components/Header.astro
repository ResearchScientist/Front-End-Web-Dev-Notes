---
import MainNavigation from '../components/MainNavigation.astro';
import DayNightModeToggle from '../components/DayNightModeToggle.astro';
---

<header>
    <MainNavigation />
    <DayNightModeToggle />
</header>

<style>
    header {
        width: 100%;
        height: 50px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom: 1px solid var(--page-colour-accent);
    }
    DayNightModeToggle {
        justify-self: flex-end;
    }
</style>