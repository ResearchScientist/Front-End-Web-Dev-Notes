---
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
---
<MainLayout pageTitle={frontmatter.section} | {frontmatter.title}>
    <h1>{frontmatter.section}</h1>
    <h2>{frontmatter.title}</h2>
    <p>{frontmatter.description}</p>
    <section>
        <h3>Tags</h3>
        <section><p class="notes-tags">{frontmatter.tags}</p></section>
    </section>
    <slot />
</MainLayout>

<style>
    .notes-tags {
        margin: 0 5px 0 0;
        padding: 2px 5px;
        background-color: lightgrey;
    }
</style>