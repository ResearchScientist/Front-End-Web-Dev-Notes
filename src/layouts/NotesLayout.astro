---
import MainLayout from "./MainLayout.astro";
import NotesNavigation from "../components/NotesNavigation.astro";
const { frontmatter } = Astro.props;
---
<MainLayout pageTitle={frontmatter.title} pageDescription={frontmatter.description}>
    <h1>{frontmatter.section}</h1>
    <section class="cards">
        <section class="card">
            <h2>{frontmatter.title}</h2>
            <p>{frontmatter.description}</p>
        </section>
        <section class="card">
            <h2>Tags</h2>
            <section>
                {frontmatter.tags.map((tag) => (<a class="tag" href={`/tags/${tag}`}>{tag}</a>))}
            </section>
        </section>
    </section>
    <slot />
    <NotesNavigation />
</MainLayout>

<style>
    .cards {
        width: 100%;
        height: 150px;
        display: grid;
        grid-template-columns: 230px 40px 230px;
        grid-template-rows: 120px;
        background-color: gray;
    }

    .card {
        width: 230px;
        height: 120px;
        padding: 0px 10px 0px;
        border-radius: 10px;
        background-color: var(--card-colour);
    }

    .card:nth-of-type(1) {
        grid-column: 1/2;
        grid-row: 1/2;
    }

    .card:nth-of-type(2) {
        grid-column: 3/4;
        grid-row: 1/2;
    }

    .tag {
        height: 26px;
        margin: 0 10px 10px 0;
        padding: 3px 4px;
        display: inline-block;
        font-size: 14px;
    }
</style>