---
const { frontmatter } = Astro.props;
---

<h1>{frontmatter.title}</h1>
<p>{frontmatter.description}</p>
<section>
    <h2>Tags</h2>
    <section><p class="notes-tags">{frontmatter.tags}</p></section>
</section>
<slot />

<style>
    .notes-tags {
        margin: 0 5px 0 0;
        padding: 2px 5px;
        background-color: lightgrey;
    }
</style>